        <Ellipse x:Name="svetloCervena" Fill="Red" Height="165" Margin="0,20,0,0" Stroke="Black" Width="165" HorizontalAlignment="Center" VerticalAlignment="Top" StrokeThickness="3"/>
        <Ellipse x:Name="svetloOranzova" Fill="Orange" Margin="0" Stroke="Black" VerticalAlignment="Center" HorizontalAlignment="Center" Height="165" Width="165" StrokeThickness="3"/>
        <Ellipse x:Name="svetloZelena" Fill="Green" Margin="0,0,0,20" Stroke="Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="165" Width="164" StrokeThickness="3"/>

    </Grid>
</Window>
